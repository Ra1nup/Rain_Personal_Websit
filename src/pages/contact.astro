</BaseLayout>

<style>
    .contact-page {
        padding-top: var(--spacing-xl);
        padding-bottom: var(--spacing-xl);
        max-width: 1200px;
    }

    .contact-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: auto 1fr;
        gap: 24px;
    }

    /* Grid Areas for Desktop */
    @media (min-width: 768px) {
        .title-card {
            grid-column: 1 / 2;
            grid-row: 1 / 2;
        }
        .methods-grid {
            grid-column: 2 / 3;
            grid-row: 1 / 2;
        }
        .photo-card {
            grid-column: 1 / 3;
            grid-row: 2 / 3;
            min-height: 400px;
        }
    }

    /* Mobile Stack */
    @media (max-width: 768px) {
        .contact-grid {
            grid-template-columns: 1fr;
            grid-template-rows: auto;
        }
        .photo-card {
            min-height: 300px;
        }
    }

    .glass {
        background: rgba(255, 255, 255, 0.65);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.4);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.07);
        border-radius: 32px; /* Smooth rounded corners */
        overflow: hidden;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
    }

    :global(.dark) .glass {
        background: rgba(28, 28, 30, 0.65);
        border: 1px solid rgba(255, 255, 255, 0.05);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.2);
    }

    .glass:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 40px 0 rgba(31, 38, 135, 0.12);
        z-index: 1;
    }

    :global(.dark) .glass:hover {
        box-shadow: 0 12px 40px 0 rgba(0, 0, 0, 0.3);
    }

    /* Title Block */
    .title-card {
        padding: 48px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        background: linear-gradient(
            135deg,
            rgba(255, 255, 255, 0.8),
            rgba(255, 255, 255, 0.4)
        );
    }

    /* Mobile adjustments for contact cards */
    @media (max-width: 768px) {
        .contact-card {
            padding: 20px !important;
            height: auto !important;
            min-height: 160px;
        }

        .contact-card .content {
            position: relative !important;
            opacity: 1 !important;
            transform: none !important;
            height: auto !important;
            margin: 4px 0;
        }

        .hover-detail {
            margin-top: 8px;
        }

        .icon-wrapper {
            width: 48px !important;
            height: 48px !important;
            margin-bottom: 8px;
        }

        .icon {
            width: 24px !important;
            height: 24px !important;
        }
    }

    :global(.dark) .title-card {
        background: linear-gradient(
            135deg,
            rgba(44, 44, 46, 0.8),
            rgba(28, 28, 30, 0.4)
        );
    }

    .title-card h1 {
        font-size: clamp(3rem, 5vw, 4.5rem);
        font-weight: 800;
        letter-spacing: -0.03em;
        line-height: 1;
        margin-bottom: 16px;
        background: linear-gradient(135deg, #000 0%, #333 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    :global(.dark) .title-card h1 {
        background: linear-gradient(135deg, #fff 0%, #a1a1a6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .title-card p {
        font-size: 1.25rem;
        color: var(--color-text-secondary);
        font-weight: 500;
    }

    /* Methods Grid */
    .methods-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 1fr 1fr;
        gap: 16px;
        height: 100%;
        min-height: 360px;
    }

    .contact-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: var(--color-text-main);
        padding: 24px;
        position: relative;
    }

    .contact-card .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 12px;
        transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        position: absolute;
        width: 100%;
        height: 100%;
    }

    .output-default {
        opacity: 1;
        transform: scale(1);
    }

    .hover-detail {
        opacity: 0;
        transform: scale(0.8);
        gap: 4px !important;
    }

    .contact-card:hover .output-default {
        opacity: 0;
        transform: scale(0.8);
    }

    .contact-card:hover .hover-detail {
        opacity: 1;
        transform: scale(1);
    }

    .detail-label {
        font-size: 0.9rem;
        opacity: 0.7;
        font-weight: 500;
    }

    .detail-text {
        font-size: 1.1rem;
        font-weight: 700;
        letter-spacing: -0.02em;
    }

    .email-text {
        font-size: 0.9rem; /* Smaller for email to fit */
    }

    .contact-card span {
        font-weight: 600;
        font-size: 0.95rem;
        letter-spacing: -0.01em;
    }

    .icon-wrapper {
        width: 56px;
        height: 56px;
        border-radius: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        background: rgba(0, 0, 0, 0.03);
    }

    :global(.dark) .icon-wrapper {
        background: rgba(255, 255, 255, 0.05);
    }

    .contact-card:hover .icon-wrapper {
        transform: scale(1.1);
    }

    .icon {
        width: 32px;
        height: 32px;
    }

    /* Brand Colors on Hover (Subtle) */
    .wechat:hover {
        color: #07c160;
    }
    .email:hover {
        color: #007aff;
    }
    .tiktok:hover {
        color: #000000;
    }
    :global(.dark) .tiktok:hover {
        color: #ffffff;
    }
    .facebook:hover {
        color: #1877f2;
    }

    /* Photo Card */
    .photo-card {
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(to bottom right, #f2f2f7, #ffffff);
        position: relative;
    }

    :global(.dark) .photo-card {
        background: linear-gradient(to bottom right, #1c1c1e, #2c2c2e);
    }

    .contact-photo {
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: absolute;
        top: 0;
        left: 0;
        transition: transform 0.7s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    .photo-card:hover .contact-photo {
        transform: scale(1.05);
    }
</style>
