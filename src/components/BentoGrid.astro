<section class="bento-section" id="work">
    <div class="container">
        <h2 class="section-title">Latest Work</h2>
        <div class="bento-grid">
            <!-- Card 1: Large Featured Item -->
            <div class="card card-large">
                <div class="card-content">
                    <h3>Project Alpha</h3>
                    <p>A revolutionary new app that changes everything.</p>
                </div>
                <div class="card-bg bg-1"></div>
            </div>

            <!-- Card 2: Medium Square -->
            <div class="card card-square">
                <div class="card-content">
                    <h3>Design System</h3>
                    <p>Unified UI kit.</p>
                </div>
                <div class="card-bg bg-2"></div>
            </div>

            <!-- Card 3: Medium Square -->
            <div class="card card-square">
                <div class="card-content">
                    <h3>Photography</h3>
                    <p>Captured moments.</p>
                </div>
                <div class="card-bg bg-3"></div>
            </div>

            <!-- Card 4: Wide Banner -->
            <div class="card card-wide">
                <div class="card-content">
                    <h3>About Me</h3>
                    <p>Learn more about my journey and skills.</p>
                </div>
                <div class="card-bg bg-4"></div>
            </div>
        </div>
    </div>
</section>

<style>
    .bento-section {
        padding: var(--spacing-xl) 0;
    }

    .section-title {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: var(--spacing-lg);
        text-align: left;
    }

    .bento-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--spacing-md);
    }

    /* Tablet & Desktop Grid */
    @media (min-width: 768px) {
        .bento-grid {
            grid-template-columns: repeat(2, 1fr);
            grid-auto-rows: minmax(300px, auto);
        }

        .card-large {
            grid-column: span 2;
            min-height: 400px;
        }

        .card-wide {
            grid-column: span 2;
            min-height: 250px;
        }
    }

    .card {
        background-color: var(--color-surface);
        border-radius: var(--radius-lg);
        overflow: hidden;
        position: relative;
        box-shadow: var(--shadow-sm);
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        justify-content: flex-end; /* Text at bottom */
        border: 1px solid rgba(0, 0, 0, 0.05); /* Subtle border */
    }

    @media (prefers-color-scheme: dark) {
        .card {
            border: 1px solid rgba(255, 255, 255, 0.05);
        }
    }

    .card:hover {
        transform: scale(1.02);
        box-shadow: var(--shadow-lg);
        z-index: 10;
    }

    .card-content {
        position: relative;
        z-index: 2;
        padding: var(--spacing-lg);
        color: white; /* Assuming dark backgrounds or overlaid images */
        background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
        width: 100%;
    }

    .card h3 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 4px;
    }

    .card p {
        font-size: 1rem;
        opacity: 0.9;
    }

    .card-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        background-size: cover;
        background-position: center;
        transition: transform 0.5s ease;
    }

    .card:hover .card-bg {
        transform: scale(1.05);
    }

    /* Placeholder Backgrounds */
    .bg-1 {
        background-color: #34c759;
        background-image: linear-gradient(135deg, #34c759 0%, #30d158 100%);
    }
    .bg-2 {
        background-color: #5856d6;
        background-image: linear-gradient(135deg, #5856d6 0%, #5e5ce6 100%);
    }
    .bg-3 {
        background-color: #ff9500;
        background-image: linear-gradient(135deg, #ff9500 0%, #ff9f0a 100%);
    }
    .bg-4 {
        background-color: #af52de;
        background-image: linear-gradient(135deg, #af52de 0%, #bf5af2 100%);
    }
</style>
