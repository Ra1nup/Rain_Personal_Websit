---
import { Image } from "astro:assets";
import flowerImage from "../assets/flower.jpg";
---

<section class="hero">
    <div class="container hero-content">
        <h1 class="headline">
            Hello, I'm Qi Kang. <span class="wave-emoji">ðŸ‘‹</span>
        </h1>
        <p class="subheadline">
            Developer & Creator. Building digital experiences with passion.
        </p>

        <div class="cta-group">
            <a href="/about" class="button primary">About Me</a>
            <a href="/contact" class="button secondary">Contact Me</a>
        </div>

        <div class="hero-image-container">
            <Image
                src={flowerImage}
                alt="Flower Decoration"
                class="hero-image"
                widths={[400, 800, 1200, 1600]}
                sizes="(max-width: 800px) 100vw, 800px"
                quality="max"
            />
            <p class="hero-caption">
                Deep green leaves cradle clusters of pink and red roses, their
                petals glistening with dewdrops, breathing softly in the quiet
                garden.
            </p>
        </div>
    </div>
</section>

<style>
    .hero {
        padding: var(--spacing-xl) 0;
        text-align: center;
        overflow: hidden;
    }

    .hero-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--spacing-md);
    }

    .headline {
        font-size: clamp(2.5rem, 5vw, 4.5rem);
        font-weight: 700;
        line-height: 1.1;
        letter-spacing: -0.02em;
        background: linear-gradient(135deg, #0071e3 0%, #bf5af2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        padding-bottom: 0.2em; /* Prevent descender clipping */
    }

    /* Dark mode gradient */
    /* Dark mode gradient */
    :global(.dark) .headline {
        background: linear-gradient(135deg, #2997ff 0%, #d488ff 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .subheadline {
        font-size: clamp(1.2rem, 2vw, 1.5rem);
        color: var(--color-text-secondary);
        max-width: 800px;
        font-weight: 400;
    }

    .cta-group {
        display: flex;
        gap: var(--spacing-md);
        margin-top: var(--spacing-md);
    }

    .button {
        padding: 12px 24px;
        border-radius: var(--radius-full);
        font-size: 1rem;
        font-weight: 500;
        text-align: centering;
        transition: all 0.2s ease;
    }

    .button.primary {
        background-color: var(--color-accent);
        color: white;
        width: 150px;
    }

    .button.primary:hover {
        background-color: #0077ed; /* Slightly lighter blue */
        transform: scale(1.02);
    }

    .button.secondary {
        background-color: transparent;
        color: var(--color-accent);
        box-shadow: inset 0 0 0 1px var(--color-accent); /* Border imitation */
        width: 150px;
    }

    .button.secondary:hover {
        background-color: rgba(0, 113, 227, 0.1);
    }

    .hero-image-container {
        margin-top: var(--spacing-xl);
        width: 100%;
        max-width: 800px;
        position: relative;
    }

    .hero-image {
        width: 100%;
        height: auto;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-lg);
        display: block;
        transition: transform 0.3s ease;
    }

    .hero-caption {
        margin-top: var(--spacing-lg);
        font-family:
            -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica,
            Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji",
            "Segoe UI Symbol";
        font-size: 1rem;
        font-weight: 500;
        color: #86868b; /* Apple's signature subtle gray text color */
        text-align: center;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
        line-height: 1.5;
        letter-spacing: -0.01em;
        margin-top: 10px;
    }

    .hero-image:hover {
        transform: scale(1.02);
    }

    @keyframes wave-animation {
        0% {
            transform: rotate(0deg);
        }
        10% {
            transform: rotate(14deg);
        }
        20% {
            transform: rotate(-8deg);
        }
        30% {
            transform: rotate(14deg);
        }
        40% {
            transform: rotate(-4deg);
        }
        50% {
            transform: rotate(10deg);
        }
        60% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(0deg);
        }
    }

    .wave-emoji {
        display: inline-block;
        animation-name: wave-animation;
        animation-duration: 2.5s;
        animation-iteration-count: infinite;
        transform-origin: 70% 70%;
        background: none;
        -webkit-background-clip: initial;
        -webkit-text-fill-color: initial;
    }
</style>
