---
import { Image } from "astro:assets";
import BaseLayout from "./BaseLayout.astro";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import Comments from "../components/Comments";
import ViewCounter from "../components/ViewCounter";

interface Props {
    title: string;
    description: string;
    pubDate: Date;
    updatedDate?: Date;
    heroImage?: any; // Updated to accept ImageMetadata
    slug?: string;
    tags?: string[];
}

const { title, description, pubDate, updatedDate, heroImage, slug, tags } =
    Astro.props;
---

<BaseLayout title={title} description={description}>
    <main>
        <article>
            <div class="hero-image fade-in">
                {
                    heroImage && (
                        <Image
                            width={1020}
                            height={510}
                            src={heroImage}
                            alt=""
                            widths={[360, 720, 1020, 2040]}
                            sizes="(max-width: 720px) 100vw, 1020px"
                            quality="high"
                        />
                    )
                }
            </div>
            <div class="prose">
                <div class="top-nav-bar fade-in">
                    <a href="/blog" class="back-link">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><line x1="19" y1="12" x2="5" y2="12"></line><polyline
                                points="12 19 5 12 12 5"></polyline></svg
                        >
                        Back to Blog
                    </a>
                    {slug && <ViewCounter client:load slug={slug} />}
                </div>
                <div class="title fade-in">
                    <div class="date">
                        {
                            pubDate.toLocaleDateString("en-us", {
                                year: "numeric",
                                month: "short",
                                day: "numeric",
                            })
                        }
                        {
                            updatedDate && (
                                <div class="last-updated-on">
                                    Last updated on{" "}
                                    {updatedDate.toLocaleDateString("en-us", {
                                        year: "numeric",
                                        month: "short",
                                        day: "numeric",
                                    })}
                                </div>
                            )
                        }
                    </div>
                    <h1>{title}</h1>
                    {
                        tags && tags.length > 0 && (
                            <div class="tags">
                                {tags.map((tag) => (
                                    <span class="tag">{tag}</span>
                                ))}
                            </div>
                        )
                    }
                    <hr />
                </div>
                <div class="post-content fade-in">
                    <slot />
                </div>
                {slug && <Comments client:visible postId={slug} />}
            </div>
        </article>
    </main>
</BaseLayout>

<style>
    main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0 auto;
    }
    /* Animation Styles */
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .fade-in {
        opacity: 0;
        animation: fadeIn 0.8s ease-out forwards;
    }

    .hero-image {
        width: 100%;
        animation-delay: 0.1s;
        text-align: center;
    }

    .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
        animation-delay: 0.3s;
    }

    .post-content {
        animation-delay: 0.5s;
    }

    .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
        width: 100%;
        height: auto;
        object-fit: cover;
    }
    @media (max-width: 720px) {
        .hero-image img {
            aspect-ratio: 16 / 9;
        }
    }
    @media (min-width: 720px) {
        .hero-image img {
            aspect-ratio: 2 / 1;
            width: 1020px;
        }
    }
    .prose {
        width: 960px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: var(--color-text-main);
    }
    .prose img {
        display: block;
        margin: 0 auto;
        max-width: 100%;
        height: auto;
    }

    /* Typography for Markdown Content */
    .prose :global(h2) {
        font-size: 1.8rem;
        font-weight: 700;
        margin-top: 2.5rem;
        margin-bottom: 1rem;
        line-height: 1.3;
        color: var(--color-text-main);
    }

    .prose :global(h3) {
        font-size: 1.4rem;
        font-weight: 600;
        margin-top: 2rem;
        margin-bottom: 0.8rem;
        line-height: 1.4;
        color: var(--color-text-main);
    }

    .prose :global(p) {
        margin-bottom: 1.5rem;
        line-height: 1.7;
    }

    .prose :global(ul), .prose :global(ol) {
        margin-bottom: 1.5rem;
        padding-left: 1.5rem;
    }

    .prose :global(ul) {
        list-style: disc;
    }

    .prose :global(ol) {
        list-style: decimal;
    }

    .prose :global(li) {
        margin-bottom: 0.5rem;
        margin-top: 0.5rem;
        line-height: 1.6;
    }
    
    .prose :global(strong) {
        font-weight: 600;
        color: var(--color-text-main);
    }

    .prose :global(blockquote) {
        border-left: 4px solid var(--color-accent);
        padding-left: 1rem;
        margin-left: 0;
        margin-right: 0;
        font-style: italic;
        color: var(--color-text-secondary);
        background: var(--color-bg-secondary);
        padding: 1rem;
        border-radius: 0 var(--radius-sm) var(--radius-sm) 0;
    }
    
    .prose :global(code) {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
        font-size: 0.9em;
        background: var(--color-bg-secondary);
        padding: 0.2em 0.4em;
        border-radius: 4px;
        border: 1px solid var(--color-border);
        color: var(--color-text-main);
    }
    
    .prose :global(pre) {
        padding: 1rem;
        border-radius: var(--radius-md);
        background: #1e1e1e;
        color: #d4d4d4;
        overflow-x: auto;
        margin-bottom: 1.5rem;
    }

    .prose :global(pre code) {
        background: transparent;
        padding: 0;
        border: none;
        color: inherit;
    }

    /* Links in prose */
    .prose :global(a:not(.back-link)) {
        color: var(--color-accent);
        text-decoration: underline;
        text-underline-offset: 2px;
    }

    .prose :global(a:not(.back-link):hover) {
        text-decoration: none;
    }

    /* Top Navigation Bar */
    .top-nav-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--color-text-secondary);
        text-decoration: none;
        font-size: 0.9rem;
        transition:
            color 0.2s ease,
            transform 0.2s ease;
    }
    .back-link:hover {
        color: var(--color-accent);
        transform: translateX(-4px);
    }
    .back-link svg {
        width: 1.2em;
        height: 1.2em;
    }
    .title h1 {
        margin: 0 0 0.5em 0;
        font-size: 2.5rem;
        font-family: "Bebas Neue", "Impact", "Arial Black", "PingFang SC", "Microsoft YaHei", "SimHei", "黑体", sans-serif;
    }
    .date {
        margin-bottom: 0.5em;
        color: var(--color-text-secondary);
    }
    .last-updated-on {
        font-style: italic;
    }
    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5em;
        justify-content: center;
        margin-bottom: 1em;
    }
    .tag {
        background: var(--color-bg-secondary);
        color: var(--color-text-secondary);
        padding: 0.2em 0.8em;
        border-radius: 999px;
        font-size: 0.85em;
        border: 1px solid var(--color-border);
    }

</style>
